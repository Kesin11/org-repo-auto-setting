{
  "name": "probot-sandbox",
  "version": "1.0.0",
  "description": "My first probot app",
  "author": "Kenta Kase <kesin1202000@gmail.com>",
  "license": "ISC",
  "repository": "https://github.com//probot-sandbox.git",
  "homepage": "https://github.com//probot-sandbox",
  "bugs": "https://github.com//probot-sandbox/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "npm run build -- --watch & nodemon --exec \"npm start\"",
    "start": "probot run ./lib/index.js",
    "lint": "standardx **/*.ts",
    "lint:fix": "standardx **/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "@types/nock": "^11.1.0",
    "nock": "^11.7.0",
    "probot": "^9.6.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.21",
    "@types/js-yaml": "^3.12.1",
    "@types/node": "^12.12.5",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "smee-client": "^1.1.0",
    "standard": "^14.3.1",
    "standardx": "^5.0.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "off"
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "env": [
      "jest"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
