{
  "name": "probot-sandbox",
  "version": "1.0.0",
  "description": "My first probot app",
  "author": "Kenta Kase <kesin1202000@gmail.com>",
  "license": "ISC",
  "repository": "https://github.com//probot-sandbox.git",
  "homepage": "https://github.com//probot-sandbox",
  "bugs": "https://github.com//probot-sandbox/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "npm run build -- --watch & nodemon --exec \"npm start\"",
    "start": "probot run ./lib/index.js",
    "lint": "standardx **/*.ts",
    "lint:fix": "standardx **/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "@types/nock": "^9.3.0",
    "nock": "^10.0.0",
    "probot": "^7.2.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/js-yaml": "^3.12.1",
    "@types/node": "^11.9.0",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "jest": "^24.0.0",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "standard": "^12.0.1",
    "standardx": "^5.0.0",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "off"
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [ "@typescript-eslint/eslint-plugin" ],
    "env": [
      "jest"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
